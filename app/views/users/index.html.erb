<p id="notice"><%= notice %></p>

<h1>Alle Registraties</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Naam</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="min-width:30px"><%= user.id %></td>
        <td style="min-width:80px"><%= user.name %></td>
        <td style="min-width:160px"><%= user.email %></td>
        <td style="min-width:60px"><%= link_to 'Bekijk', user %></td>
        <td style="min-width:60px"><%= link_to 'Pas Aan', edit_user_path(user) %></td>
        <td style="min-width:60px"><%= link_to 'Verwijder', user, method: :delete, data: { confirm: 'Weet je het zeker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registreer je nu (opniew)', new_user_path %>
